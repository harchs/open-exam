<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active">
      <a href="#tab1" data-toggle="tab">Students</a> 
    </li>
    <li>
      <a href="#tab2" data-toggle="tab"> Quizzes </a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
    <h1><%= current_user.name %>'s students</h1>

    <table>
      <tr>
        <th>Name</th>
        <th></th>
        <th>Email</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %><td>
        <td><%= user.email %><td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Quiz History', quiz_history_path(:id => user.id) %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= link_to 'New user', new_user_path %> </br>
  </div>

  <div class="tab-pane" id="tab2">
    <h1><%= current_user.name %>'s quizzes</h1>

    <table>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th></th>
      </tr>

    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.name %><td>
        <td><%= quiz.description %><td>
        <td><%= link_to "View Stats", quiz_stats_path(quiz.id) %></td>
      </tr>
    <% end %>
    </table>

    <br />
  </div>
</div>
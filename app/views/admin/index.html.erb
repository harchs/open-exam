<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active">
      <a href="#tab1" data-toggle="tab">Students</a> 
    </li>
    <li>
      <a href="#tab2" data-toggle="tab"> Quizzes </a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <h1><%= current_user.name %>'s students</h1>
      <p>
        <%= link_to 'Add a student', add_users_path, :class => "btn btn-primary" %>
      </p>

      <table class="table">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Edit</th>
          <th>Delete</th>
          <th>Quiz History</th>
        </tr>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Quiz History', user_path(:id => user.id) %></td>
        </tr>
      <% end %>
      </table>

      <br />
    </div>

    <div class="tab-pane" id="tab2">
      <h1><%= current_user.name %>'s quizzes</h1>
      <p>
        <%= link_to 'New Quiz', new_quiz_path, :class => "btn btn-primary" %>
      </p>
      <table class="table">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Students Taken</th>
          <th> % Correct </th>
          <th> Stats </th>
        </tr>

      <% @quizzes.each do |quiz| %>
        <tr>
          <td><%= quiz.name %></td>
          <td><%= quiz.description %></td>
          <td><%= quiz.user_quizzes.count %> / <%= @current_org.users.all.count %></td>
          <td><%= QuizGrader.percent_correct(quiz)%></td>
          <% if UserQuiz.find_by_quiz_id(quiz.id) %>
            <td><%= link_to "View Stats", quiz_stats_path(quiz.id) %></td>
          <% else %>
            <td>No available stats</td>
          <% end %>
          
        </tr>
      <% end %>
      </table>

      <br />
    </div>
  </div>
</div>

<fieldset class="new_choice form-inline">
  <%= f.text_field :name, :class => "input-xlarge" %>
  <input type="radio" name="is_correct" class="regular-radio"/>
  <%= f.hidden_field :_destroy %>
  <%= f.hidden_field :is_correct, :class => "choice_status" %>
  <%= link_to "Remove", '#', class: "remove_fields reject-icon", title: "Remove this choice" %>
  <br />
  <br />
</fieldset>

<script type="text/javascript">
  $(function(){
    $.each($('.choice_status'), function(index, value) {
      if ($(this).val() == "t") {
        $(this).siblings('label').children('input').attr('checked', 'checked');
      }
    });

    $('.reject-icon').tooltip();
    $('.regular-radio').tooltip({
      title: "Mark this choice as the correct choice"
    });
  });
</script>

<%= form_for(@organization) do |f| %>

  <% if @organization.errors.any? %>
  <div class="row">
  <div class="offset1 span8">
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @organization.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    </div>
</div>
  <% end %>


  <h3>Your Organization:</h3>
  <div class="row">
  <div class="offset1 span8">

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :subdomain %>
    <%= f.text_field :subdomain %>
  </div>
  <div class="field">
    <%= f.label :invite_code %>
    <%= f.text_field :invite_code %>
  </div>
</div>
</div>

  <h3>Your Info:</h3>
  <div class="row">
  <div class="offset1 span8">

  <%= fields_for @user do |user_f| %>
    <div class="field">
      <%= user_f.label :name %>
      <%= user_f.text_field :name %>
    </div>
    <div class="field">
      <%= user_f.label :email %>
      <%= user_f.text_field :email %>
    </div>
    <div class="field">
      <%= user_f.label :password %>
      <%= user_f.password_field :password %>
    </div>
    <div class="field">
      <%= user_f.label :password_confirmation %>
      <%= user_f.password_field :password_confirmation %>
    </div>
  <% end %>

  </div>
</div>

  <div class="row">
  <div class="offset1 span2">

  <div class="controls">   
   <input name="commit" class = "btn btn-primary" type="submit" value="Sign up">
  </div>

    </div>
</div>

<% end %>
